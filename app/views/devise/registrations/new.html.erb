<%= render "shared/second-header" %>

<!-- app/views/users/new.html.erb -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="card shadow-lg">
        <div class="card-header text-center">
          <h2>ユーザー新規登録</h2>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
            <div class="mb-3">
              <%= form.label :company_name, '会社名', class: 'form-label' %>
              <%= form.text_field :company_name, class: 'form-control', placeholder: '名前を入力してください' %>
            </div>
            <div class="mb-3">
              <%= form.label :name, '名前', class: 'form-label' %>
              <%= form.text_field :name, class: 'form-control', placeholder: '名前を入力してください' %>
            </div>
            <div class="mb-3">
              <%= form.label :email, 'メールアドレス', class: 'form-label' %>
              <%= form.email_field :email, class: 'form-control', placeholder: 'メールアドレスを入力してください' %>
            </div>
            <div class="mb-3">
              <%= form.label :password, 'パスワード', class: 'form-label' %>
              <%= form.password_field :password, class: 'form-control', placeholder: '6文字以上の半角英数字' %>
            </div>
            <div class="mb-4">
              <%= form.label :password_confirmation, 'パスワード確認用', class: 'form-label' %>
              <%= form.password_field :password_confirmation, class: 'form-control', placeholder: 'パスワードを再度入力してください' %>
            </div>
            <div class="d-grid mb-3">
              <%= form.submit '登録', class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>
          <div class="text-center">
            <%= link_to 'ログインはこちら', user_session_path, class: 'btn btn-link' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>